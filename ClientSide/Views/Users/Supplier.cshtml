@model ClientSide.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Quản lý Nhà cung cấp";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">

        <h1 class="mb-4">Danh sách Nhà cung cấp</h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <p>
            <a asp-action="Create" asp-controller="Users" asp-route-roleId="2" class="btn btn-primary">Thêm Nhà cung cấp mới</a>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Quay lại Dashboard</a>
        </p>

        <form asp-action="Supplier" method="get" class="mb-3">
            <div class="row g-3">
                <div class="col-md-9">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên hoặc username..." value="@Model.SearchTerm" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-info w-100">Tìm kiếm</button>
                </div>
            </div>
            <input type="hidden" name="roleFilter" value="Supplier" />
        </form>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Họ và tên</th>
                        <th scope="col">Tên đăng nhập</th>
                        <th scope="col">Email</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.FullName</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @if (user.IsActive == true)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Users" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Sửa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Supplier" asp-route-pageNumber="@(Model.PageNumber - 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-roleFilter="@Model.RoleFilter">Previous</a>
                </li>

                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">@Model.PageNumber / @Model.TotalPages</a>
                </li>

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Supplier" asp-route-pageNumber="@(Model.PageNumber + 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-roleFilter="@Model.RoleFilter">Next</a>
                </li>
            </ul>
        </nav>
        <span class="float-end">Tổng số: @Model.TotalCount</span>

    </div>
</div>