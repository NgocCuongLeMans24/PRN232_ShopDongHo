@model List<ClientSide.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    bool canManageProducts = ViewBag.CanManageProducts ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Danh sách sản phẩm</h2>
    @if (canManageProducts)
    {
        <a asp-action="Create" class="btn btn-primary">+ Thêm sản phẩm</a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Chưa có sản phẩm nào.</div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img class="card-img-top" src="@product.Image" alt="@product.ProductName" style="height:200px;object-fit:cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-muted">@product.Brand?.BrandName</p>
                        <p class="card-text fw-bold">@string.Format("{0:N0} VNĐ", product.Price)</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-controller="Products" asp-action="ProductDetail" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm">Xem chi tiết</a>

                        @if (product.StockQuantity > 0)
                        {
                            <form asp-controller="Orders" asp-action="CreateFromProduct" method="post">
                                <input type="hidden" name="ProductId" value="@product.ProductId" />
                                <input type="hidden" name="Quantity" value="1" />
                                <button type="submit" class="btn btn-success btn-sm">Mua hàng</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-danger">Hết hàng</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
