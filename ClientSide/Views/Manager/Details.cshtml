@model ClientSide.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2 class="mb-3">Chi tiết sản phẩm</h2>

<div class="mb-3">
    <a asp-action="Products" class="btn btn-secondary">&laquo; Quay lại danh sách</a>
</div>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(ViewBag.DisplayImageUrl as string ?? Model.Image))
        {
            <img src="@(ViewBag.DisplayImageUrl as string ?? Model.Image)" class="img-fluid rounded" alt="@Model.ProductName" />
        }
        else
        {
            <div class="bg-light p-5 text-center rounded">
                <p class="text-muted">Chưa có ảnh sản phẩm</p>
            </div>
        }
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Mã sản phẩm:</dt>
            <dd class="col-sm-8">@Model.ProductCode</dd>

            <dt class="col-sm-4">Tên sản phẩm:</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>

            <dt class="col-sm-4">Thương hiệu:</dt>
            <dd class="col-sm-8">@Model.Brand?.BrandName</dd>

            <dt class="col-sm-4">Danh mục:</dt>
            <dd class="col-sm-8">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-4">Nhà cung cấp:</dt>
            <dd class="col-sm-8">@(Model.Supplier?.SupplierName ?? "N/A")</dd>

            <dt class="col-sm-4">Giá:</dt>
            <dd class="col-sm-8"><strong>@string.Format("{0:N0} VNĐ", Model.Price)</strong></dd>

            <dt class="col-sm-4">Tồn kho:</dt>
            <dd class="col-sm-8">@Model.StockQuantity</dd>

            <dt class="col-sm-4">Trạng thái:</dt>
            <dd class="col-sm-8">
                @if (Model.IsActive == true)
                {
                    <span class="badge bg-success">Đang bán</span>
                }
                else
                {
                    <span class="badge bg-secondary">Ngừng bán</span>
                }
            </dd>

            <dt class="col-sm-4">Ngày tạo:</dt>
            <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Mô tả:</dt>
            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Chỉnh sửa</a>
            <a asp-action="Products" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>

