@model List<ClientSide.Controllers.PendingReviewDto>
@{
    ViewData["Title"] = "Quản lý Đánh giá";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Quản lý Đánh giá</h1>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">← Quay lại Dashboard</a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                Không có đánh giá nào đang chờ duyệt.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Sản phẩm</th>
                            <th>Khách hàng</th>
                            <th>Đánh giá</th>
                            <th>Nhận xét</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.ReviewId</td>
                                <td>
                                    <a asp-controller="Products" asp-action="ProductDetail" asp-route-id="@review.ProductId">
                                        @review.ProductName
                                    </a>
                                </td>
                                <td>@review.CustomerName</td>
                                <td>
                                    <div class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <span>@(i <= review.Rating ? "★" : "☆")</span>
                                        }
                                    </div>
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(review.Comment) ? "Không có nhận xét" : review.Comment)</td>
                                <td>@review.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@review.ReviewId" />
                                        <button type="submit" class="btn btn-sm btn-success">✓ Duyệt</button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@review.ReviewId" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Bạn có chắc muốn xóa đánh giá này?');">
                                            ✕ Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

