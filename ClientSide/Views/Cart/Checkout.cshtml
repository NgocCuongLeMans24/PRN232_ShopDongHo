@model ClientSide.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán Đơn hàng";
}

<div class="container" style="padding: 50px;">
    <h2>Xác nhận Thanh toán</h2>
    <hr />

    <div class="row">
        <div class="col-md-7">
            <h4>Thông tin đơn hàng</h4>
            <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
            <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
            <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>

            <h5>Chi tiết sản phẩm</h5>
            <form id="checkoutForm" asp-action="CreateOrderFromCart" asp-controller="Cart" method="post">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.CartItems.Count; i++)
                        {
                            var item = Model.CartItems[i];
                            <tr>
                                <td>@item.ProductName</td>
                                <td>
                                    <input type="number" 
                                           name="quantities[@item.ProductId]" 
                                           value="@item.Quantity" 
                                           min="1" 
                                           class="form-control quantity-input" 
                                           data-price="@item.Price"
                                           data-product-id="@item.ProductId"
                                           style="width: 80px;" />
                                </td>
                                <td>@item.Price.ToString("N0") VND</td>
                                <td class="item-total" data-product-id="@item.ProductId">
                                    @((item.Price * item.Quantity).ToString("N0")) VND
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card p-3">
                <h4>Tổng cộng</h4>
                <h2 class="text-danger" id="totalAmount">@Model.TotalAmount.ToString("N0") VND</h2>
                <hr />
                <p>Chọn phương thức thanh toán:</p>

                <button type="submit" form="checkoutForm" id="btnVnPay" class="btn btn-primary w-100">
                    Thanh toán VNPay
                </button>

                <button type="submit" form="checkoutForm" formaction="@Url.Action("CreateOrderCOD", "Cart")" class="btn btn-secondary w-100 mt-2">
                    Thanh toán khi nhận hàng (COD)
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Cập nhật tổng tiền khi thay đổi số lượng
            var quantityInputs = document.querySelectorAll('.quantity-input');
            var totalAmountElement = document.getElementById('totalAmount');
            var initialTotal = @Model.TotalAmount;

            quantityInputs.forEach(function(input) {
                input.addEventListener('change', function() {
                    updateTotal();
                });

                input.addEventListener('input', function() {
                    updateTotal();
                });
            });

            function updateTotal() {
                var total = 0;
                quantityInputs.forEach(function(input) {
                    var quantity = parseInt(input.value) || 0;
                    var price = parseFloat(input.getAttribute('data-price')) || 0;
                    var productId = input.getAttribute('data-product-id');
                    var itemTotal = quantity * price;
                    total += itemTotal;

                    // Cập nhật thành tiền cho từng sản phẩm
                    var itemTotalElement = document.querySelector('.item-total[data-product-id="' + productId + '"]');
                    if (itemTotalElement) {
                        itemTotalElement.textContent = itemTotal.toLocaleString('vi-VN') + ' VND';
                    }
                });

                // Cập nhật tổng cộng
                if (totalAmountElement) {
                    totalAmountElement.textContent = total.toLocaleString('vi-VN') + ' VND';
                }
            }

            // Xử lý submit form cho VNPay
            var btnVnPay = document.getElementById("btnVnPay");
            if (btnVnPay) {
                btnVnPay.addEventListener('click', function(e) {
                    // Form sẽ submit đến CreateOrderFromCart, sau đó redirect đến Payment/Checkout
                    // Không cần preventDefault vì chúng ta muốn form submit bình thường
                });
            }
        });
    </script>
}